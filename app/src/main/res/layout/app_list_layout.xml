<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/app_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_list_title"
        android:layout_marginTop="12dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search:"
        android:layout_below="@id/app_list_title"
        android:layout_marginTop="12dp"
        android:textSize="14sp"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/appSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchTitle"
        android:queryHint="Search apps"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appSearchView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>
